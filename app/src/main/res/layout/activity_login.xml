<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".activities.LoginActivity"
    android:orientation="vertical"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="162dp"
                android:layout_height="160dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="36dp"
                android:src="@drawable/yaku_agua128"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></ImageView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
                app:layout_constraintTop_toBottomOf="@+id/imageView3"
                tools:layout_editor_absoluteX="16dp"></Space>

            <LinearLayout

                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView3"
                app:layout_constraintVertical_bias="1.0">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="30dp"
                    style="@style/letra_titulos"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="BIENVENIDO"
                    android:textSize="25dp"></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/BEfirstname"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_graybackground"
                        android:hint="Nombre"
                        style="@style/letra_editText"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:digits="abcdefghijklmnñopqrstuvwxyz0123456789 "
                        android:singleLine="true"
                        android:textColor="@color/primaryDarkColor"
                        android:textColorHint="#9A9797"
                        android:textSize="15dp"></EditText>

                    <EditText
                        android:id="@+id/BEmiddlename"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="1"
                        style="@style/letra_editText"
                        android:background="@drawable/edittext_graybackground"
                        android:hint="Alias"
                        android:digits="abcdefghijklmnñopqrstuvwxyzABCDEFGHIJKLMNÑOPQRSTUVWXY0123456789_.- "
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:singleLine="true"
                        android:textColor="@color/primaryDarkColor"
                        android:textColorHint="#9A9797"
                        android:textSize="15dp"></EditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/BElastname"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_graybackground"
                        android:hint="Apellidos"
                        android:digits="abcdefghijklmnñopqrstuvwxyz0123456789 "
                        style="@style/letra_editText"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:singleLine="true"
                        android:textColor="@color/primaryDarkColor"
                        android:textColorHint="#9A9797"
                        android:textSize="15dp"></EditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/BEemail"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_graybackground"
                        android:hint="Correo electrónico"
                        style="@style/letra_editText"
                        android:inputType="textEmailAddress"
                        android:paddingStart="20dp"
                        android:digits="abcdefghijklmnñopqrstuvwxyzABCDEFGHIJKLMNÑOPQRSTUVWXY0123456789@_.- "
                        android:paddingEnd="20dp"
                        android:singleLine="true"
                        android:textColor="@color/primaryDarkColor"
                        android:textColorHint="#9A9797"
                        android:textSize="15dp"></EditText>
                </LinearLayout>




                <Button
                    android:id="@+id/btnbegining"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/custom_botom"
                    android:scrollHorizontally="true"
                    style="@style/letra_editText"
                    android:text="Ingresar"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/BEtxtcontactSupport"
                    android:layout_width="wrap_content"
                    android:textColor="#A39C9C"
                    style="@style/letra_editText"
                    android:text="Contacte soporte si no puedes ingresar"
                    android:layout_gravity="center"
                    android:layout_marginBottom="30dp"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>