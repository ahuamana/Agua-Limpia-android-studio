<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".begining.begining"
    android:orientation="vertical"
    >


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp"></Space>

        <ImageView
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/logoagua"
            ></ImageView>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        >

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:text="EMAIL"

            android:gravity="center_vertical|center_horizontal"
            android:textSize="25dp"
            android:layout_height="wrap_content"></TextView>

        <EditText
            android:id="@+id/BEemail"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_width="2in"
            android:textSize="20dp"
            android:textAlignment="center"
            android:inputType="textEmailAddress"
            android:layout_height="wrap_content"></EditText>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"></Space>

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:text="NOMBRE COMPLETO"

            android:gravity="center_vertical|center_horizontal"
            android:textSize="25dp"
            android:layout_height="wrap_content"></TextView>

        <EditText
            android:id="@+id/BEfullname"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_width="2in"
            android:inputType="text"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"></EditText>


        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"></Space>

        <Button
            android:id="@+id/btnbegining"
            android:layout_gravity="center"
            android:layout_width="2in"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@drawable/custom_botom"
            android:text="Ingresar"/>


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        ></LinearLayout>



</LinearLayout>