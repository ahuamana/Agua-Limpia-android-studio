<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingBottom="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:layout_marginBottom="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@drawable/custom_botom"
            android:layout_marginTop="30dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Author"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_weight="2"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Author"
                android:textSize="18sp"
                android:layout_weight="0.8"
                android:id="@+id/MMtxtauthor"></TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Muestra"
                android:textStyle="bold"
                android:textSize="17sp"

                android:layout_weight="2"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Muestra"
                android:textSize="15sp"
                android:layout_weight="0.8"
                android:id="@+id/MMtxtMuestra"></TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tiempo"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_weight="2"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tiempo"
                android:textSize="15sp"
                android:layout_weight="0.8"
                android:id="@+id/MMtxtTiempo"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BQV"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_weight="2"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BQV"
                android:textSize="15sp"
                android:layout_weight="0.8"
                android:id="@+id/MMtxtBQV"></TextView>

        </LinearLayout>



    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:id="@+id/MMivImagen"
        android:src="@drawable/ic_menu_gallery"
        android:paddingTop="80dp"
        android:layout_alignBottom="@+id/linearLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/primaryDarkColor"
        ></de.hdodenhof.circleimageview.CircleImageView>



</RelativeLayout>