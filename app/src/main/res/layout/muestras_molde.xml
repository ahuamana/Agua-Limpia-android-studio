<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="10dp">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:id="@+id/MMivImagen"
            android:src="@drawable/ic_menu_gallery"
            ></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <!--

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:text="Author"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:background="@drawable/buttom_masinformacion"
                    android:textSize="15sp"></TextView>

                  -->

                <TextView
                    android:id="@+id/MMtxtauthor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:hint="Author"
                    android:text="AUTHOR"
                    style="@style/letra_editText"
                    android:textSize="15sp"></TextView>

                <TextView
                    android:id="@+id/MMtxtTiempo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:text="FECHA"
                    android:textColor="#858484"
                    android:gravity="center"
                    style="@style/letra_editText"
                    android:layout_marginStart="8dp"
                    android:textSize="15sp"></TextView>

            </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="2"
                    style="@style/letra_editText"
                    android:text="Departam."
                    android:background="@drawable/buttom_masinformacion"
                    android:textSize="15sp"></TextView>

                <TextView
                    android:id="@+id/MMtxtDepartamento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/letra_editText"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:hint="Departamento"
                    android:layout_marginStart="8dp"
                    android:textSize="15sp"></TextView>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:text="Provincia"
                    style="@style/letra_editText"
                    android:background="@drawable/buttom_masinformacion"
                    android:textSize="15sp"></TextView>

                <TextView
                    android:id="@+id/MMtxtProvincia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:hint="Provincia"
                    style="@style/letra_editText"
                    android:layout_marginStart="8dp"
                    android:textSize="15sp"></TextView>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="2"
                    style="@style/letra_editText"
                    android:text="Resultado"
                    android:background="@drawable/buttom_masinformacion"
                    android:textSize="15sp"></TextView>

                <TextView
                    android:id="@+id/MMtxtResultado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    style="@style/letra_editText"
                    android:hint="positivo"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    android:textSize="15sp"></TextView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>


