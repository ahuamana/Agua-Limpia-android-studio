<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registrar.registrar"
    android:padding="10dp"
    android:orientation="vertical"
    android:id="@+id/REcontenedorRegistrar"
    >


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"

        >

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:scrollHorizontally="true"
            ></Space>

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:text="TIPO DE MUESTREO"
            android:textSize="24dp"
            android:scrollHorizontally="true"
            ></TextView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:scrollHorizontally="true"
            ></Space>




        <Button
            android:id="@+id/REbtnfisioquimico"
            android:layout_width="2in"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Fisioquimico"
            android:textColor="@color/white"
            android:background="@drawable/custom_botom"
            android:scrollHorizontally="true"
            ></Button>

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp"
            ></Space>

        <Button
            android:id="@+id/REbtnmicrobiologico"
            android:layout_width="2in"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="MICROBIOLOGICO"
            android:textColor="@color/white"
            android:background="@drawable/custom_botom"
            android:scrollHorizontally="true"
            ></Button>


    </LinearLayout>




</LinearLayout>