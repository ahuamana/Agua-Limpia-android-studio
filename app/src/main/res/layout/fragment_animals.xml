<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.AnimalsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="13dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="INSECTOS"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:textSize="20dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                app:contentPadding="10dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/greenPrimary"
                        android:text="Mariposa"
                        android:textSize="20dp"/>

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="190dp"
                        android:layout_height="120dp"
                        app:riv_corner_radius="10dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/mariposon"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:text="Partes de la mariposa"
                android:layout_height="wrap_content"/>


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                app:contentPadding="10dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/greeDark"
                        android:text="Cabeza"
                        android:textSize="20dp"/>

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="190dp"
                        android:layout_height="120dp"
                        app:riv_corner_radius="10dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/cabeza_mariposa"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/RIimgFoto"
                        android:src="@drawable/ic_image_camera"
                        app:civ_circle_background_color="#9E9E9E"
                        app:civ_border_width="40dp"
                        app:civ_border_color="#9E9E9E"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:paddingTop="5dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_marginBottom="10dp"
                        />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fabSelectImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_photo"
                        android:backgroundTint="@color/greenPrimary"
                        android:layout_gravity="bottom|center"
                        android:layout_marginLeft="50dp"
                        app:elevation="0dp"/>

                </FrameLayout>

                <Button
                    android:id="@+id/RIbtnRegistrar"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="15dp"
                    style="@style/letra_editText"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:background="@drawable/buttom_registrarmuestra"
                    android:text="GUARDAR IMAGEN"
                    android:textColor="@color/white"/>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>