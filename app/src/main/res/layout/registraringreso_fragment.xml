<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registraringreso.registraringreso"
    android:orientation="vertical"
    android:id="@+id/REcontenedorRegistrarIngreso"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollHorizontally="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar todo los datos de la muestra"
            android:gravity="center"
            android:textSize="25dp"
            android:scrollHorizontally="true"
            android:paddingBottom="15dp"
            ></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/RIedtLatitud"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:hint="Latitud "
                android:layout_height="48dp"
                android:paddingStart="20dp"
                android:singleLine="true"
                android:paddingEnd="20dp"
                android:background="@drawable/edittext_graybackground"
                android:textSize="15dp"
                android:scrollHorizontally="true"
                ></EditText>

            <EditText
                android:id="@+id/RIedtLongitud"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="10dp"
                android:paddingStart="20dp"
                android:singleLine="true"
                android:paddingEnd="20dp"
                android:background="@drawable/edittext_graybackground"
                android:layout_weight="2"
                android:hint="Longitud"
                android:textSize="15dp"
                android:scrollHorizontally="true"
                ></EditText>

            <ImageButton
                android:id="@+id/RIbtngeolocalizacion"
                android:layout_width="0dp"
                android:layout_marginStart="10dp"
                android:layout_height="48dp"
                android:background="@drawable/edittext_graybackground"
                android:layout_weight="1"
                android:src="@drawable/ic_location"
                ></ImageButton>
        </LinearLayout>

        <EditText
            android:id="@+id/RIedtcantidadmuestra"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingStart="20dp"
            android:singleLine="true"
            android:paddingEnd="20dp"
            android:background="@drawable/edittext_graybackground"
            android:layout_marginTop="10dp"
            android:hint="Cantidad de Muestra (ml)"
            android:textSize="15dp"
            android:inputType="number"
            android:scrollHorizontally="true"
            ></EditText>




        <EditText
            android:id="@+id/RIedtBQV"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingStart="20dp"
            android:singleLine="true"
            android:paddingEnd="20dp"
            android:background="@drawable/edittext_graybackground"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Resultado (BQV)"
            android:textSize="15dp"
            android:scrollHorizontally="true"
            ></EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/RIedtDepartamento"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:hint="Departamento"
                android:layout_height="48dp"
                android:paddingStart="20dp"
                android:singleLine="true"
                android:paddingEnd="20dp"
                android:background="@drawable/edittext_graybackground"
                android:textSize="15dp"
                android:scrollHorizontally="true"
                ></EditText>

            <EditText
                android:id="@+id/RIedtProvincia"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="10dp"
                android:paddingStart="20dp"
                android:singleLine="true"
                android:paddingEnd="20dp"
                android:background="@drawable/edittext_graybackground"
                android:layout_weight="2"
                android:hint="Provincia"
                android:textSize="15dp"
                android:scrollHorizontally="true"
                ></EditText>


        </LinearLayout>

        <ImageButton
            android:id="@+id/RIbtncargarfoto"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/buttom_take_photo"
            android:src="@drawable/ic_camera"
            android:scaleType="fitCenter"
            android:layout_marginBottom="10dp"
            android:text="Tomar Foto"></ImageButton>


        <ImageView
            android:id="@+id/RIimgFoto"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"></ImageView>

        <Button
            android:id="@+id/RIbtnRegistrar"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:background="@drawable/buttom_registrarmuestra"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="REGISTRAR"></Button>

        <Button
            android:id="@+id/RIbtnLimpiar"
            android:textColor="@color/white"
            android:background="@drawable/buttom_limpiar_campos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:text="LIMPIAR"></Button>



    </LinearLayout>


    </ScrollView>




</LinearLayout>