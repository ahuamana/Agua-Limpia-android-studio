<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.ResultadoCapturaImageActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/back_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:paddingStart="5dp"
                android:backgroundTint="@color/greenPrimary"
                android:background="@drawable/ic_back_white"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/circleImageProduct"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:src="@drawable/star"
                        android:layout_marginTop="50dp"/>


                </FrameLayout>


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/fabSelectImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/congratulations"
                    android:textColor="@color/primarystatusbar"
                    android:textSize="20dp"
                    android:contentDescription="Sube una foto"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="bottom|center"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="30dp">



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mariposa"/>

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/textViewName"
                            android:layout_width="wrap_content"
                            app:riv_corner_radius="5dp"
                            android:layout_marginTop="5dp"
                            android:adjustViewBounds="true"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:src="@drawable/real_mariposa_monarca"/>


                    </LinearLayout>



                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorGray"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="30dp">



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Descripcion"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/textViewPrecio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/descripcion_mariposa"
                            android:textColor="@color/colorBlack"
                            android:textSize="15dp"/>


                    </LinearLayout>



                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorGray"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:layout_marginLeft="15dp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="30dp">






                </LinearLayout>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRegistrarProductDetails"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:enabled="true"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:backgroundTint="@color/primaryColor"
                    android:backgroundTint="@color/greenPrimary"
                    android:background="@drawable/custom_botom"
                    android:text="REGISTRAR"/>




            </LinearLayout>






        </FrameLayout>

    </ScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>